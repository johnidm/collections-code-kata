unit Util.Records.Helpers;

interface

type
  TProcessarLotes = record
  public
    NumeroLote: string;
    procedure Executar();
  end;

  TUtilProcessarLotes = record helper for TProcessarLotes
  public
    procedure EnviarEmail();
  end;

implementation

uses
  Vcl.Dialogs;

{ TProcessarLotes }

procedure TProcessarLotes.Executar;
begin
  ShowMessage('Processando lote ' + NumeroLote);
end;

{ TUtilProcessarLotes }

procedure TUtilProcessarLotes.EnviarEmail;
begin
  ShowMessage('Enviando e-mail ' + NumeroLote );
end;

end.
