unit Helpers;

interface

uses
  System.StrUtils, System.SysUtils;

type
  {
  TUtilHelperString = record helper for string
  public
    function InserirCaracterEntreLetras(const ACaractere: Char = ' '): string;
  end;
  }

  procedure TT();

implementation

{ TUtilHelperString }

procedure TT();
begin

end;

{
function TUtilHelperString.InserirCaracterEntreLetras(const ACaractere: Char): string;
var
  Texto: string;
  Letra: Char;
begin
  Result:= '';

  Texto:= Self; // Self é uma variável interna que possiu o conteúdo da string

  for Letra in Texto do
    Result:= IfThen( not Result.IsEmpty, ACaractere ) + Letra;
    // Aqui estamos usando a funcao IsEmpty que esta implemetnado em um Heler da string na unit SysUtils


end;
}

end.
